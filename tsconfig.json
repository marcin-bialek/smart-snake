{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "tmp",
        "pretty": true,
        "removeComments": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
